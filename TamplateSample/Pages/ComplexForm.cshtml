<h2>Створення замовлення</h2>
<form method="post" class="form-container">
    <div class="form-group">
        <label>Ім'я клієнта</label>
        <input asp-for="Order.CustomerName" type="text">
        <span asp-validation-for="@Model.Order.CustomerName"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="@Model.Order.Email" type="email">
    </div>
    <div class="form-group">
        <label>Кількість</label>
        <input asp-for="@Model.Order.Quantity" type="number">
    </div>
    <div class="form-group">
        <label>Ціна</label>
        <input asp-for="@Model.Order.Price" type="number" step="0.01">
    </div>
    <div class="form-group">
        <label>Тип оплати</label>
        <select asp-for="@Model.Order.PaymentType">
            @foreach (var type in Model.PaymentTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
    </div>
    <div class="form-group radio-group">
        <label>Доставка</label>
        <label>
            <input type="radio" asp-for="@Model.Order.DeliveryMethod" value="Courier">
            Кур'єр
        </label>
        <label>
            <input type="radio" asp-for="@Model.Order.DeliveryMethod" value="Pickup">
            Самовивіз
        </label>
    </div>
    <div class="form-group checkdox-group">
        <label>
            <input asp-for="@Model.Order.IsGift">
            Подарункова упаковка
        </label>
    </div>
    <div class="form-group">
        <label>Коментар</label>
        <textarea asp-for="@Model.Order.Comment"></textarea>
    </div>
    <button type="submit">Зберегти</button>
</form>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}
